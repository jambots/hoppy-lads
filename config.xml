<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id        = "com.jambots.hoppy-lads"
        versionCode="2" 
        version   = "1.3">

    <!-- versionCode is optional and Android only -->
<preference name="phonegap-version" value="3.6.3" />
    <name>Hoppy Lads</name>
    <description>Jambots presents Hoppy Lads - a jumpy physics game.</description>
<gap:platform name="android" />
<gap:config-file platform="android" parent="/manifest/application">
    <activity android:launchMode="singleInstance" />
    <preference name="keeprunning" value="false"/>
</gap:config-file>
<preference name="permissions" value="none"/>
<preference name="Fullscreen" value="true" />
<preference name="Orientation" value="landscape" />
<gap:splash src="splash960.png" />
<gap:plugin name="org.apache.cordova.media" version="0.2.8" />
<access origin="*" />

<icon src="icon512.png" />
</widget>